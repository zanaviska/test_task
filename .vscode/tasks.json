{
  "tasks": [
    {
      "type": "shell",
      "label": "windows build active file",
      "command": "C:\\MinGW\\bin\\g++.exe",
      "args": [
        "-g",
        "*.cpp",
        "*.h",
        "--std=c++2a",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "C:\\MinGW\\bin"
      }
    },
    {
      "type": "shell",
      "label": "wsl build active file",
      "command": "/usr/bin/g++",
      "args": [
        "--std=c++2a",
        "-g",
        "${fileDirname}/*.cpp",
        "${fileDirname}/*.h",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
